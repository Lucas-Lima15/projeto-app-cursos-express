<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cursos</title>
</head>
<body>
    <h1>Treinaweb Cursos</h1>

    <ul>
        <% for (var i = 0; i < cursos.length; i++) { %>
            <li>
                <%= cursos[i].nome %> - <%= cursos[i].categoria %>
            </li>
        <% } %>
    </ul>

    <form action="" onsubmit="createCourse(event)" method="post">
        <input type="text" id="nome" placeholder="Nome" autofocus>
        <input type="text" id="categoria" placeholder="Categoria">
        <input type="submit" value="Criar">
    </form>
</body>

<script>
    function createCourse(event) {
        event.preventDefault();
        var nome = document.querySelector('#nome').value;
        var categoria = document.querySelector('#categoria').value;

        fetch('/', {
            method: 'post',
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({nome, categoria})
        })
        .then(resp => resp.json())
        .then(() => {location.reload()})
        .catch(() => {
            console.error('ocorreu um erro!');
        });

        function login() {
            fetch('/login', {
                method: 'post',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({name: 'joao', password: 'joao1234'})
            })
        }
    }
</script>

</html>